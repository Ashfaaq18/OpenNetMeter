<UserControl x:Class="OpenNetMeter.Views.DataUsageHistoryV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:v="clr-namespace:OpenNetMeter.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <v:UnitConverterBytes x:Key="converterBytes"/>
    </UserControl.Resources>
    <Grid Style="{StaticResource BackgroundColor2}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label VerticalAlignment="Center" Style="{StaticResource FontColor1}">Usage of</Label>
            <StackPanel Grid.Row="0" Margin="4,10,10,10" Width="150">
                <ComboBox x:Name="combo_box" ItemsSource="{Binding Profiles, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                          SelectedItem="{Binding SelectedProfile , Mode=TwoWay}" 
                          Style="{StaticResource ComboBoxFlatStyle}"/>
            </StackPanel>
            <Label VerticalAlignment="Center" Style="{StaticResource FontColor1}">From:</Label>
            <DatePicker Style="{StaticResource ModernDatePicker}" VerticalAlignment="Center" DisplayDateStart="{Binding DateMin, Mode=OneWay}" DisplayDateEnd="{Binding DateMax, Mode=OneWay}" SelectedDate="{Binding DateStart}" ></DatePicker>
            <Label VerticalAlignment="Center" Style="{StaticResource FontColor1}">To:</Label>
            <DatePicker Style="{StaticResource ModernDatePicker}" VerticalAlignment="Center" DisplayDateStart="{Binding DateMin, Mode=OneWay}" DisplayDateEnd="{Binding DateMax, Mode=OneWay}" SelectedDate="{Binding DateEnd}"></DatePicker>
            <Button Height="24" Width="64" Margin="16,0" Command="{Binding FilterBtn}" Style="{StaticResource ButtonColor}">
                <TextBlock FontFamily="Segoe UI" Text="Filter" VerticalAlignment="Center" Style="{StaticResource FontColor1}"/>
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="4"/>
                        <Setter Property="BorderBrush" Value="{StaticResource BrushBorderEmphasis}"/>
                        <Setter Property="BorderThickness" Value="1"/>
                    </Style>
                </Button.Resources>
            </Button> 
           
        </StackPanel>
        <DataGrid Grid.Row="1" x:Name="AllAppsData" FrozenColumnCount="1" IsReadOnly="True" AutoGenerateColumns="False" ItemsSource="{Binding MyProcesses}" BorderThickness="1" Style="{DynamicResource ModernDGHeaderStyle}">
            <DataGrid.Columns>
                <DataGridTemplateColumn x:Name="DG_Name" Header="Name" HeaderStyle="{StaticResource ModernDGCHeaderStyle1}" CellStyle="{StaticResource ModernDGCellStyle1}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Image Source="{Binding Icon}" Width="16" Height="16" Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn x:Name="DG_DataRecv" Header="Data Received" Binding="{Binding CurrentDataRecv, Converter={StaticResource converterBytes}}" HeaderStyle="{StaticResource ModernDGCHeaderStyle2}" CellStyle="{StaticResource ModernDGCellStyle2}"/>
                <DataGridTextColumn x:Name="DG_DataSent" Header="Data Sent" Binding="{Binding CurrentDataSend, Converter={StaticResource converterBytes}}" HeaderStyle="{StaticResource ModernDGCHeaderStyle2}" CellStyle="{StaticResource ModernDGCellStyle2}"/>
            </DataGrid.Columns>
        </DataGrid>
        <!-- Footer aligned to DataGrid columns -->
        <Grid Grid.Row="2"
      x:Name="TotalsFooter"
      Width="{Binding ElementName=AllAppsData, Path=ActualWidth}"
      Style="{StaticResource ModernFooterGridStyle}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding ElementName=AllAppsData, Path=Columns[0].ActualWidth}"/>
                <ColumnDefinition Width="{Binding ElementName=AllAppsData, Path=Columns[1].ActualWidth}"/>
                <ColumnDefinition Width="{Binding ElementName=AllAppsData, Path=Columns[2].ActualWidth}"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource ModernFooterTextBorder}">
                <TextBlock Text="Total"
                   Style="{StaticResource ModernFooterTextStyle}"/>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource ModernFooterTextBorder}">
                <TextBlock Text="{Binding TotalDownloadData, Converter={StaticResource converterBytes}}"
                   Style="{StaticResource ModernFooterTextStyle}"/>
            </Border>

            <Border Grid.Column="2" Style="{StaticResource ModernFooterTextBorder}">
                <TextBlock Text="{Binding TotalUploadData, Converter={StaticResource converterBytes}}"
                   Style="{StaticResource ModernFooterTextStyle}"/>
            </Border>
        </Grid>

    </Grid>
</UserControl>
