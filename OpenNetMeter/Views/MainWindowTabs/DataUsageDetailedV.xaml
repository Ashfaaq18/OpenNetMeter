<UserControl x:Class="OpenNetMeter.Views.DataUsageDetailedV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:v="clr-namespace:OpenNetMeter.Views" 
             xmlns:vm="clr-namespace:OpenNetMeter.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="650">
    
    <UserControl.Resources>
        <v:UnitConverterBytes x:Key="converterBytes"/>
    </UserControl.Resources>
    <Grid Style="{StaticResource BackgroundColor2}">
        <DataGrid Grid.Row="1" x:Name="AllAppsData" FrozenColumnCount="1" IsReadOnly="True" AutoGenerateColumns="False" ItemsSource="{Binding MyProcesses}" BorderThickness="1" Style="{DynamicResource ModernDGHeaderStyle}">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Name" HeaderStyle="{StaticResource ModernDGCHeaderStyle1}" CellStyle="{StaticResource ModernDGCellStyle1}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Image Source="{Binding Value.Icon}" Width="16" Height="16" Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding Value.Name}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Current Data Recieved"  Binding="{Binding Value.CurrentDataRecv, Converter={StaticResource converterBytes}}" HeaderStyle="{StaticResource ModernDGCHeaderStyle2}" CellStyle="{StaticResource ModernDGCellStyle2}"/>
                <DataGridTextColumn Header="Current Data Sent" Binding="{Binding Value.CurrentDataSend, Converter={StaticResource converterBytes}}" HeaderStyle="{StaticResource ModernDGCHeaderStyle2}" CellStyle="{StaticResource ModernDGCellStyle2}"/>
                <DataGridTextColumn Header="Total Data Recieved" Binding="{Binding Value.TotalDataRecv, Converter={StaticResource converterBytes}}" HeaderStyle="{StaticResource ModernDGCHeaderStyle2}" CellStyle="{StaticResource ModernDGCellStyle2}"/>
                <DataGridTextColumn Header="Total Data Sent" Binding="{Binding Value.TotalDataSend, Converter={StaticResource converterBytes}}" HeaderStyle="{StaticResource ModernDGCHeaderStyle2}" CellStyle="{StaticResource ModernDGCellStyle2}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
    
</UserControl>
