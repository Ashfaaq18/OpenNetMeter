<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:res="clr-namespace:OpenNetMeter.Properties">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Theme.Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- Modern Card Style -->
    <Style x:Key="ModernCard" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BrushSurfaceLight}"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2" Direction="270"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Source={x:Static res:SettingsManager.Current}, Path = DarkMode}" Value="True">
                <Setter Property="Background" Value="{StaticResource BrushSurfaceDark3}"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    
    <Style TargetType="Line" x:Key="LineColor">
        <Setter Property="Stroke" Value="{StaticResource BrushBlack}"></Setter>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Source={x:Static res:SettingsManager.Current}, Path = DarkMode}" Value="True">
                <Setter Property="Stroke" Value="{StaticResource BrushWhite}"></Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- Title Text Style -->
    <Style x:Key="TitleText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource BrushPrimaryText}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Source={x:Static res:SettingsManager.Current}, Path = DarkMode}" Value="True">
                <Setter Property="Foreground" Value="{StaticResource BrushPrimaryTextDark}"></Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- Primary Text Style -->
    <Style x:Key="PrimaryText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="{StaticResource BrushPrimaryText}"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Source={x:Static res:SettingsManager.Current}, Path = DarkMode}" Value="True">
                <Setter Property="Foreground" Value="{StaticResource BrushPrimaryTextDark}"></Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- Secondary Text Style -->
    <Style x:Key="SecondaryText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource BrushSecondaryText}"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Source={x:Static res:SettingsManager.Current}, Path = DarkMode}" Value="True">
                <Setter Property="Foreground" Value="{StaticResource BrushSecondaryText}"></Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="DarkModeBackgroundColor">
        <Setter Property="Control.Background" Value="{StaticResource BrushBlack}"></Setter>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Source={x:Static res:SettingsManager.Current}, Path = DarkMode}" Value="True">
                <Setter Property="Control.Background" Value="{StaticResource BrushWhite}"></Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="Fill1" TargetType="Path">
        <Setter Property="Fill" Value="Black"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Source={x:Static res:SettingsManager.Current}, Path=DarkMode}" Value="True">
                <Setter Property="Fill" Value="White"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="FontColor1">
        <Setter Property="Control.Foreground" Value="{StaticResource BrushBlack}"></Setter>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Source={x:Static res:SettingsManager.Current}, Path = DarkMode}" Value="True">
                <Setter Property="Control.Foreground" Value="{StaticResource BrushWhite}"></Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="FontColor2">
        <Setter Property="Control.Foreground" Value="{StaticResource BrushGray}"></Setter>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Source={x:Static res:SettingsManager.Current}, Path = DarkMode}" Value="True">
                <Setter Property="Control.Foreground" Value="{StaticResource BrushLightGray}"></Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="FontColor3">
        <Setter Property="Control.Foreground" Value="{StaticResource BrushTertiaryText}"></Setter>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Source={x:Static res:SettingsManager.Current}, Path = DarkMode}" Value="True">
                <Setter Property="Control.Foreground" Value="{StaticResource BrushTertiaryTextDark}"></Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="FontColor4">
        <Setter Property="Control.Foreground" Value="{StaticResource BrushLinkText}"></Setter>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Source={x:Static res:SettingsManager.Current}, Path = DarkMode}" Value="True">
                <Setter Property="Control.Foreground" Value="{StaticResource BrushLinkTextDark}"></Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Grid" x:Key="BackgroundColor1">
        <Setter Property="Background" Value="{StaticResource BrushSurfaceLight}"></Setter>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Source={x:Static res:SettingsManager.Current}, Path = DarkMode}" Value="True">
                <Setter Property="Background" Value="{StaticResource BrushSurfaceDark}"></Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Grid" x:Key="BackgroundColor2">
        <Setter Property="Background" Value="{StaticResource BrushSurfaceLightAlt}"></Setter>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Source={x:Static res:SettingsManager.Current}, Path = DarkMode}" Value="True">
                <Setter Property="Background" Value="{StaticResource BrushSurfaceDarkAlt}"></Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Border" x:Key="CardHeaderStyle">
        <Setter Property="Height" Value="48"/>
        <Setter Property="Background" Value="{StaticResource BrushAccentGreenSoft}"></Setter>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Source={x:Static res:SettingsManager.Current}, Path = DarkMode}" Value="True">
                <Setter Property="Background" Value="{StaticResource BrushAccentGreenDark}"></Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Border" x:Key="BorderColor">
        <Setter Property="Control.BorderBrush" Value="{StaticResource BrushBorderNeutral}"></Setter>
        <Setter Property="Control.BorderThickness" Value="1"></Setter>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Source={x:Static res:SettingsManager.Current}, Path = DarkMode}" Value="True">
                <Setter Property="Control.BorderBrush" Value="{StaticResource BrushBorderNeutralDark}"></Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- Modern Radio Button Style -->
    <Style x:Key="ModernRadioButton" TargetType="RadioButton">
        <Setter Property="Foreground" Value="{StaticResource BrushMutedRadioText}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Grid Margin="{TemplateBinding Margin}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Custom Radio Circle -->
                        <Grid Grid.Column="0" Width="20" Height="20" VerticalAlignment="Center">
                            <!-- Outer Circle -->
                            <Ellipse x:Name="OuterCircle" 
                                        Width="20" Height="20"
                                        Stroke="{StaticResource BrushBorderLight}"
                                        StrokeThickness="2"
                                        Fill="{StaticResource BrushWhite}">
                                <Ellipse.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="2" Opacity="0.1"/>
                                </Ellipse.Effect>
                            </Ellipse>

                            <!-- Inner Dot -->
                            <Ellipse x:Name="InnerDot" 
                                        Width="10" Height="10"
                                        Fill="{StaticResource BrushAccentTeal}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Opacity="0">
                                <Ellipse.RenderTransform>
                                    <ScaleTransform x:Name="DotScale" ScaleX="0" ScaleY="0" CenterX="5" CenterY="5"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>
                        </Grid>

                        <!-- Content -->
                        <ContentPresenter Grid.Column="1" 
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Center"
                                            RecognizesAccessKey="True"/>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Hover State -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="OuterCircle" Property="Stroke" Value="{StaticResource BrushAccentTeal}"/>
                            <Setter TargetName="OuterCircle" Property="Fill" Value="{StaticResource BrushAccentTealHover}"/>
                        </Trigger>

                        <!-- Checked State -->
                        <Trigger Property="IsChecked" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="InnerDot"
                                                           Storyboard.TargetProperty="Opacity"
                                                           To="1" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="DotScale"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="1" Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.5"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="DotScale"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="1" Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.5"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="InnerDot"
                                                           Storyboard.TargetProperty="Opacity"
                                                           To="0" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="DotScale"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="0" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="DotScale"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="0" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                            <Setter TargetName="OuterCircle" Property="Stroke" Value="{StaticResource BrushAccentTeal}"/>
                            <Setter TargetName="OuterCircle" Property="StrokeThickness" Value="2"/>
                        </Trigger>

                        <!-- Pressed State -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="OuterCircle" Property="Fill" Value="{StaticResource BrushAccentTealPressed}"/>
                        </Trigger>

                        <!-- Disabled State -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                            <Setter Property="Cursor" Value="Arrow"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Source={x:Static res:SettingsManager.Current}, Path = DarkMode}" Value="True">
                <Setter Property="Foreground" Value="{StaticResource BrushPrimaryTextDark}"></Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="ModernSlider" TargetType="Slider">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Slider">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Track Grid.Row="1" x:Name="PART_Track">
                            <Track.DecreaseRepeatButton>
                                <RepeatButton>
                                    <RepeatButton.Style>
                                        <Style TargetType="RepeatButton">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="RepeatButton">
                                                        <Border Height="4" Background="{StaticResource BrushAccentTeal}" CornerRadius="2"/>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </RepeatButton.Style>
                                </RepeatButton>
                            </Track.DecreaseRepeatButton>
                            <Track.IncreaseRepeatButton>
                                <RepeatButton>
                                    <RepeatButton.Style>
                                        <Style TargetType="RepeatButton">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="RepeatButton">
                                                        <Border Height="4" Background="{StaticResource BrushAccentTealMuted}" CornerRadius="2"/>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </RepeatButton.Style>
                                </RepeatButton>
                            </Track.IncreaseRepeatButton>
                            <Track.Thumb>
                                <Thumb x:Name="Thumb">
                                    <Thumb.Style>
                                        <Style TargetType="Thumb">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Thumb">
                                                        <Ellipse x:Name="ThumbCircle" Width="20" Height="20" Fill="{StaticResource BrushWhite}" 
                                                                   Stroke="{StaticResource BrushAccentTeal}" StrokeThickness="2">
                                                            <Ellipse.Effect>
                                                                <DropShadowEffect ShadowDepth="0" BlurRadius="4" Opacity="0.2"/>
                                                            </Ellipse.Effect>
                                                        </Ellipse>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="ThumbCircle" Property="Width" Value="22"/>
                                                                <Setter TargetName="ThumbCircle" Property="Height" Value="22"/>
                                                            </Trigger>
                                                            <Trigger Property="IsDragging" Value="True">
                                                                <Setter TargetName="ThumbCircle" Property="Fill" Value="{StaticResource BrushAccentTealPressed}"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Thumb.Style>
                                </Thumb>
                            </Track.Thumb>
                        </Track>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>


