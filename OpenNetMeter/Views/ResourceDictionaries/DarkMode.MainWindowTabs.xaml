                <Setter Property="Background" Value="#c97c5d"/>
                <Setter Property="BorderBrush" Value="#c97c5d"/>
            </MultiDataTrigger>

            <!-- set selected button border light mode color -->
            <DataTrigger Binding="{Binding TabBtnToggle}" Value="0">
