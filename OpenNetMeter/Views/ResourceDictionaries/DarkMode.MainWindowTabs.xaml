                <Setter Property="Background" Value="{StaticResource BrushSurfaceDarkTab}"/>
                <Setter Property="BorderBrush" Value="{StaticResource BrushSurfaceDarkTab}"/>
            </DataTrigger>

            <!-- set button highlight light mode color -->
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource BrushAccentPeach}"/>
