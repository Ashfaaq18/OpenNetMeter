<Window x:Class="OpenNetMeter.Views.MiniWidgetV"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:OpenNetMeter.ViewModels"
        xmlns:v="clr-namespace:OpenNetMeter.Views"
        xmlns:res="clr-namespace:OpenNetMeter.Properties"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Topmost="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        LocationChanged="Window_LocationChanged"
        Width="{Binding Width, Mode=TwoWay}"
        Height="{Binding Height, Mode=TwoWay}"
        Background="#01000000"
        ShowInTaskbar="False">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" GlassFrameThickness="1" CornerRadius="0" />
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <v:UnitConverterBytes x:Key="converterBytes"/>
        <v:NetSpeedFormatConverter x:Key="netSpeedFormatConverter"/>
    </Window.Resources>

    <Border Style="{StaticResource BorderColor}">
        <Grid Background="{Binding BackgroundColor}" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ContextMenu>
                <ContextMenu Style="{StaticResource miniWidgetContextMenuColor}">
                    <MenuItem Header="Open" Click="MenuItem_Open_Click"/>
                    <MenuItem Header="Hide" Click="MenuItem_Hide_Click"/>
                </ContextMenu>
            </Grid.ContextMenu>
            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="5,2">
                <TextBlock Padding="0" FontSize="12" Style="{StaticResource FontColor1}">D-S :</TextBlock>
                <TextBlock Padding="5,0,0,0"  FontSize="12" Style="{StaticResource FontColor1}" Text="{Binding DownloadSpeed, Converter={StaticResource netSpeedFormatConverter}}" />
                <TextBlock Padding="0" FontSize="12" Style="{StaticResource FontColor1}">ps</TextBlock>
            </StackPanel>
            <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="5,2">
                <TextBlock Padding="0" FontSize="12" Style="{StaticResource FontColor1}">U-S :</TextBlock>
                <TextBlock Padding="5,0,0,0" FontSize="12" Style="{StaticResource FontColor1}" Text="{Binding UploadSpeed, Converter={StaticResource netSpeedFormatConverter}}"/>
                <TextBlock Padding="0" FontSize="12" Style="{StaticResource FontColor1}">ps</TextBlock>
            </StackPanel>
            <ToggleButton Grid.Row="0"
                          Grid.Column="1"
                          Grid.RowSpan="2"
                          Width="32"
                          Height="30"
                          Margin="0,4,4,4"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center"
                          IsChecked="{Binding IsPinned, Mode=TwoWay}"
                          ToolTip="Pin">
                <ToggleButton.Style>
                    <Style TargetType="ToggleButton" BasedOn="{StaticResource FontColor1}">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="{Binding RelativeSource={RelativeSource Self}, Path=Foreground}"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="ToolTip" Value="Pin"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Border x:Name="PinBorder"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="3"
                                            Padding="6">
                                        <Image x:Name="PinStateImage"
                                               Width="14"
                                               Height="14"
                                               Stretch="Uniform">
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Setter Property="Source" Value="/OpenNetMeter;component/Resources/pin/pin.png"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}}" Value="True">
                                                            <Setter Property="Source" Value="/OpenNetMeter;component/Resources/pin/unpin.png"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Source={x:Static res:SettingsManager.Current}, Path=DarkMode}" Value="True">
                                                            <Setter Property="Source" Value="/OpenNetMeter;component/Resources/pin/pin-dark.png"/>
                                                        </DataTrigger>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}}" Value="True"/>
                                                                <Condition Binding="{Binding Source={x:Static res:SettingsManager.Current}, Path=DarkMode}" Value="True"/>
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="Source" Value="/OpenNetMeter;component/Resources/pin/unpin-dark.png"/>
                                                        </MultiDataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#30000000"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#40000000"/>
                                <Setter Property="ToolTip" Value="Unpin"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ToggleButton.Style>
            </ToggleButton>
        </Grid>
    </Border>
    
</Window>
